@model DisplayApp.Models.AddCommentsViewModel

<form asp-action="Add" asp-controller="Comments" asp-route-uniqueId="@ViewBag.UniqueId">
    <input type="hidden" asp-for="UniqueId" />
    <div class="form-group">
        <label asp-for="Comment" class="control-label"></label>
        <textarea asp-for="Comment" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Tags" class="control-label"></label>
        <input asp-for="Tags" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Add Comment" class="btn btn-primary my-3" />
    </div>
</form>
