@model DisplayApp.Models.Domain.Comments

<h2>Are you sure you want to delete this comment?</h2>

<div>
    <h4>Comment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Comment</dt>
        <dd class="col-sm-10">@Model.Comment</dd>
        <dt class="col-sm-2">Tags</dt>
        <dd class="col-sm-10">@Model.Tags</dd>
        <dt class="col-sm-2">Created At</dt>
        <dd class="col-sm-10">@Model.CreatedAt</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CommentsId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Comments" asp-route-uniqueId="@Model.UniqueId" class="btn btn-secondary">Cancel</a>
    </form>
</div>