@model List<DisplayApp.Models.Domain.Comments>
<a asp-controller="Comments" asp-action="Add" asp-route-uniqueId="@ViewBag.temp_uniqueId" class="btn btn-primary my-3">Add Comment</a>
<table id="commentsTable" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Comment</th>
            <th>Tags</th>
            <th>Created At</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var comment in Model)
        {
            <tr>
                <td>@comment.Comment</td>
                <td>@comment.Tags</td>
                <td>@comment.CreatedAt</td>
                <td>
                    <a href="@Url.Action("Edit", "Comments", new { id = comment.CommentsId })">Edit</a> |
                    <a href="@Url.Action("Delete", "Comments", new { id = comment.CommentsId })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#commentsTable').DataTable();
        });
    </script>
}
